<div class="ui5-table" border="0" cellspacing="0" cellpadding="0" @keydown="{{_onkeydown}}">

	<div class="ui5-table-header">
		<div id="{{_id}}-columnHeader" class="ui5-table-header-row" tabindex="0" style="height: 48px" @click="{{_onColumnHeaderClick}}">
			{{#each visibleColumns}}
				<slot name="{{this._individualSlot}}"></slot>
			{{/each}}
		</div>
	</div>

	<div class="ui5-table-body">
		{{#each rows}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}

		{{#unless rows.length}}
			{{#if showNoData}}
				<div class="ui5-table-no-data-row-root">
					<div class="ui5-table-no-data-cell" colspan="{{visibleColumnsCount}}">

						<div class="ui5-table-no-data-row">
							<span>{{noDataText}}</span>
						</div>
					</div>
				</div>
			{{/if}}
		{{/unless}}
	</div>
</div>
