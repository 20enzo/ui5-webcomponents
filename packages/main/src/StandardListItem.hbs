{{>include "./ListItem.hbs"}}

{{#*inline "listItemContent"}}
	<span class="sapMSLITitle">{{ctr._nodeText}}</span>
{{/inline}}

{{#*inline "imageBegin"}}
	{{#if displayImage}}
		<img src="{{ctr.image}}" class="sapMSLIImg">
	{{/if}}
{{/inline}}

{{#*inline "iconBegin"}}
	{{#if displayIconBegin}}
		<ui5-icon src="{{ctr.icon}}" class="sapMLIBIcon"></ui5-icon>
	{{/if}}
{{/inline}}

{{#*inline "iconEnd"}}
	{{#if displayIconEnd}}
		<ui5-icon src="{{ctr.icon}}" class="sapMLIBIcon"></ui5-icon>
	{{/if}}
{{/inline}}