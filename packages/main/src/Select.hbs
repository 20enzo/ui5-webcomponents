<div
	id="{{idPrefix}}"
	class="ui5-select-root"
	dir="{{effectiveDir}}"
	tabindex="{{tabIndex}}"
	role="button"
	aria-haspopup="listbox"
	aria-labelledby="{{idPrefix}}-label"
	aria-describedby="{{ariaDescribedBy}}"
	aria-disabled="{{isDisabled}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@click="{{_toggleRespPopover}}"
>
	<div class="ui5-select-label-root">
		<ui5-label id="{{idPrefix}}-label" for="{{idPrefix}}">{{_text}}</ui5-label>
	</div>

	<ui5-icon
		name="slim-arrow-down"
		input-icon
		?pressed="{{_iconPressed}}"
		dir="{{effectiveDir}}"
	></ui5-icon>

	{{#if hasValueState}}
		<span id="{{valueStateTextId}}" class="ui5-hidden-text">{{valueStateText}}</span>
	{{/if}}
	<slot name="formSupport"></slot>
</div>
