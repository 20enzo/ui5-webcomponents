<section style="{{styles.root}}" class="ui5-popup-root" role="dialog" aria-modal="true" aria-labelledby="ui5-popup-header">

	{{> beforeHeader}}

	<span class="first-fe" tabindex="0" @focusin={{forwardToLast}}></span>

	{{> header}}

	<div class="ui5-popup-content" style="{{styles.content}}">
		<slot></slot>
	</div>

	{{> footer}}

	<span class="last-fe" tabindex="0" @focusin={{forwardToFirst}}></span>

</section>


{{#*inline "footer"}}
	{{#if footer.length }}
		<footer class="ui5-popup-footer-root">
			<slot name="footer"></slot>
		</footer>
	{{/if}}
{{/inline}}

{{#*inline "header"}}
		{{#if header.length }}
			<header class="ui5-popup-header-root" id="ui5-popup-header">
				<slot name="header"></slot>
			</header>
		{{else}}
			<header class="ui5-popup-header-root">
				<h2 class="ui5-popup-header-text" id="ui5-popup-header">{{headerText}}</h2>
			</header>
		{{/if}}
{{/inline}}


{{#*inline "beforeHeader"}}
{{/inline}}
