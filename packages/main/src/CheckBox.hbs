<div
	class="ui5-checkbox-root {{classes.main}}"
	role="checkbox"
	aria-checked="{{checked}}"
	aria-readonly="{{ariaReadonly}}"
	aria-disabled="{{ariaDisabled}}"
	aria-label="{{ariaLabel}}"
	aria-labelledby="{{ariaLabelledBy}}"
	aria-describedby="{{ariaDescribedBy}}"
	tabindex="{{tabIndex}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@click="{{_onclick}}"
	dir="{{effectiveDir}}"
>
		<div id="{{idPrefix}}-CbBg" class="ui5-checkbox-inner">
			{{#if checked}}
				<ui5-icon name="accept" class="ui5-checkbox-icon" dir="ltr"></ui5-icon>
			{{/if}}

			<input id="{{idPrefix}}-CB" type='checkbox' ?checked="{{checked}}" ?readonly="{{readonly}}" ?disabled="{{disabled}}" data-sap-no-tab-ref/>
		</div>

		{{#if _label.text}}
			<ui5-label id="{{idPrefix}}-label" class="ui5-checkbox-label" ?wrap="{{_label.wrap}}">{{_label.text}}</ui5-label>
		{{/if}}

		{{#if hasValueState}}
			<span id="{{idPrefix}}-descr" class="ui5-hidden-text">{{valueStateText}}</span>
		{{/if}}

		<slot name="formSupport"></slot>
</div>
