<div class="ui5-rpo-root"
	@ui5-beforeClose={{forwardEvent}}
	@ui5-afterClose={{forwardEvent}}
	@ui5-beforeOpen={{forwardEvent}}
	@ui5-afterOpen={{forwardEvent}}
>
	{{#if _isPhone}}
		<ui5-dialog 
			id="ui5-rpo-popup"
			stretch
			no-padding
			_disable-initial-focus
		>
			{{> header}}

			<slot></slot>

			{{> footer}}

		</ui5-dialog>
	{{else}}
		<ui5-popover
			id="ui5-rpo-popup"
			style={{styles.popover}}
			?no-padding={{hasPadding}}
			@ui5-afterClose={{detachResizeHandler}}
			@ui5-afterOpen={{attachResizeHandler}}
		>

			{{> header}}

			<slot></slot>

			{{> footer}}

		</ui5-popover>
	{{/if}}
</div>

{{#*inline "footer"}}
	{{#if showFooter}}
		<slot slot="footer" name="footer"></slot>
	{{/if}}
{{/inline}}

{{#*inline "header"}}
	{{#if showHeader}}
		{{#if header.length}}
			<slot slot="header" name="header"></slot>
		{{else}}
			<header class="ui5-responsive-popover-header">
				<ui5-title level="H5" class="ui5-responsive-popover-header-text">{{headerText}}</ui5-title>
				<ui5-button
					icon="decline"
					design="Transparent"
					@click="{{close}}"
				>
				</ui5-button>
			</header>
		{{/if}}
	{{/if}}
{{/inline}}