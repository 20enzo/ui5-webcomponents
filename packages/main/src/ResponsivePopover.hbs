<div class="ui5-rpo-root"
	@ui5-before-close={{forwardEvent}}
	@ui5-after-close={{forwardEvent}}
	@ui5-before-open={{forwardEvent}}
	@ui5-after-open={{forwardEvent}}
>
	{{#if _isPhone}}
		<ui5-dialog 
			id="ui5-rpo-popup"
			stretch
			no-padding
			_disable-initial-focus
		>
			{{> header}}

			<slot></slot>

			{{> footer}}

		</ui5-dialog>
	{{else}}
		<ui5-popover
			id="ui5-rpo-popup"
			style={{styles.popover}}
			?no-padding={{hasPadding}}
			@ui5-afterClose={{detachResizeHandler}}
			@ui5-afterOpen={{attachResizeHandler}}
		>

			{{> header}}

			<slot></slot>

			{{> footer}}

		</ui5-popover>
	{{/if}}
</div>

{{#*inline "footer"}}
	{{#unless hideFooter}}
		<slot slot="footer" name="footer"></slot>
	{{/unless}}
{{/inline}}

{{#*inline "header"}}
	{{#unless hideHeader}}
		{{#if header.length}}
			<slot slot="header" name="header"></slot>
		{{else}}
			<header class="ui5-responsive-popover-header" slot="header">
				<ui5-title level="H5" class="ui5-responsive-popover-header-text">{{headerText}}</ui5-title>

				{{#if showCloseButton}}
					<ui5-button
						icon="decline"
						design="Transparent"
						@click="{{close}}"
					>
					</ui5-button>
				{{/if}}
			</header>
		{{/if}}
	{{/unless}}
{{/inline}}